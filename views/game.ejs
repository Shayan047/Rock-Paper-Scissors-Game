<%- include("header") -%>
<div class="scoreboard">
    <div class="title">
        <img src="images/logo.svg" alt="">
    </div>

    <div class="rectangle">
        <div class="box">
            <p>Player</p>
            <h1><%= player %></h1>
        </div>
        
        <div class="chances box">
            <p>chances</p>
            <h1>0</h1>
        </div>
        
        <div class="score box">
            <p>SCORE</p>
            <h1>0</h1>
        </div>
    </div>
</div>



<div class="signs">

    <div class="sign paper" id="Paper">
        <img src="images/Paper.png" alt="">
    </div>

    <div class="sign scissors" id="Scissors">
        <img src="images/Scissors.png" alt="">
    </div>

     <div class="sign rock" id="Rock">
         <img src="images/Rock.png" alt="">
    </div>
</div>

<div class="play">
    <div class="userSign">
        <p>You Picked</p>
        <img src="" alt="" class="chosenSign">
    </div>

    <div class="result">
        <span></span>
        <h1></h1>
        <button>play again</button>
    </div>

    <div class="comSign">
        <p>Computer Picked</p>
        <img src="" alt="" class="randomSign">
    </div>
</div>

<div class="back-drop"></div>

<form class="game-over" method="post" action="/new-game">
    <div class="inside-border"></div>
    <h1>Game Over!</h1>
    <button type="submit">New Game</button>
</form>


<%- include("footer") -%>

            